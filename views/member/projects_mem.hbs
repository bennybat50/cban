<style>
    .title {
        display: block;
        /* or inline-block */
        text-overflow: ellipsis;
        word-wrap: break-word;
        overflow: hidden;
        max-height: 2.6em;
        line-height: 1.2em;
        font-weight: 700;
    }

    .event-date-input {
        display: hidden !important;
    }

    .descp {
        display: block;
        /* or inline-block */
        text-overflow: ellipsis;
        word-wrap: break-word;
        overflow: hidden;
        max-height: 4.0em;
        line-height: 1.5em;
    }
</style>
<div class="row">
    {{#each projects }}
    <div class="col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="pricingTable1 text-center">
                    <img src="{{ resource }}" alt="" class="" height="120">
                    <h1 class="mt-2 mb-0 title ">{{ caption }} </h1>
                    <hr class="hr-dashed my-4">
                    <p class="descp">{{ descp }}</p>
                    <div class="text-center">
                        <div class="row">
                            <div class="col-md-12">
                                <h5 class="amount">N{{ amount_required }}<small
                                        class="font-12 text-muted">/needed</small></h5>
                            </div>
                            <div class="col-md-12">
                                <h5 class="amount">N{{ total_raised }}<small class="font-12 text-muted">/Raised</small>
                                </h5>
                            </div>
                        </div>

                    </div>
                </div>
                <a href="/member/view-project/{{id}}"
                    class="btn btn-primary w-100 btn-skew btn-outline-dashed py-2 "><span>View more about
                        project</span></a>
            </div>
            <!--end pricingTable-->
        </div>
        <!--end card-body-->
    </div>
    <!--end card-->

<!--end col-->
{{/each }}
</div>