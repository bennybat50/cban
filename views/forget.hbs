<!-- Log In page -->
<div class="container">
    <div class="row vh-100 d-flex justify-content-center">
        <div class="col-12 align-self-center">
            <div class="row">
                <div class="col-lg-4 mx-auto">
                    <div class="card">
                        <div class="card-body p-0 ">
                            <div class="text-center p-3">
                                <h4 class="mt-3 mb-1 fw-bold  font-30">Recover Your Account!</h4>
                                <p class="font-20  mb-0">Forget Password</p>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <!-- Tab panes -->
                            <div class="tab-content">

                                <div class="tab-pane active p-3" id="LogIn_Tab" role="tabpanel">
                                    <form class="form-horizontal auth-form form-parsley reg-form" action="" method="POST">

                                        <div class="form-group">
                                            <label class="form-label">E-Mail</label>
                                            <div>
                                                <input type="email" class="form-control" name="email" required parsley-type="email"
                                                    placeholder="Enter a valid e-mail" />
                                            </div>
                                        </div>
                                       
                                        <!--end form-group-->
                                        

                                        <div class="form-group mb-0 row">
                                            <div class="col-12 text-center reg-btn">
                                                <button class="btn btn-primary waves-effect waves-light"
                                                    type="submit">Recover</button>
                                            </div>
                                        </div>
                                        <br>
                                        <div class="form-group text-center">
                                            <label for="" class="text-danger">{{error}}</label>
                                        </div>
                                        <!--end form-group-->
                                    </form>
                                    <!--end form-->
                                    <div class="m-3 text-center text-muted">
                                        <p class="mb-0">Create CBAN Account ? <a href="register"
                                                class="text-primary ms-2">Register</a></p>
                                    </div>


                                </div>


                            </div>
                        </div>
                        <!--end card-body-->
                        <div class="card-body bg-light-alt text-center">
                            <span class="text-muted d-none d-sm-inline-block">CBAN Â©
                                <script>
                                    document.write(new Date().getFullYear())
                                </script>
                            </span>
                        </div>
                    </div>
                    <!--end card-->
                </div>
                <!--end col-->
            </div>
            <!--end row-->
        </div>
        <!--end col-->
    </div>
    <!--end row-->
</div>
<!--end container-->
<!-- End Log In page -->