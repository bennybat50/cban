<link href="plugins/dropify/css/dropify.min.css" rel="stylesheet">

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col">
                <h4 class="card-title">Recent and past Cause</h4>
            </div>
            <div class="col-auto"> <a href="#" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal"
                    data-bs-target="#createCauseModal">
                    <span class="day-name" id="Day_Name">Create Cause</span>&nbsp;
                    <i data-feather="plus" class="align-self-center icon-xs ms-1"></i>
                </a></div>
        </div>
    </div>
    <!--end card-header-->
    <div class="card-body">
        <div class="row">
            {{#each causes }}
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <div class="pricingTable1 text-center">
                            {{#if resource }}
                            <img src="{{resource}}" alt="" class="" height="120">
                            {{else }}
                            <img src="/images/placeholder.png" alt="" class="" height="120">
                            {{/if }}

                            <h3 class="amount ">{{caption}} </h3>
                            <hr class="hr-dashed ">
                            <p>{{descp}}</p>
                            <hr class="hr-dashed ">
                            <div class="row">
                                <div class="col-6">
                                    <h6>Total Needed</h6>
                                    <h4>₦{{total_involved}}</h4>
                                </div>
                                <div class="col-6">
                                    <h6>Total Raised</h6>
                                    <h4>₦{{total_raised}}</h4>
                                </div>
                            </div>
                            <hr class="hr-dashed my-4">
                            <div class="row">
                                
                                 <div class="col-md-4">
                                    <a href="/view-cause/{{id}}" class="btn btn-sm btn-primary">View <i data-feather="eye"
                                            class="align-self-center icon-xs ms-1"></i></a>
                                </div>
                                <div class="col-md-4">
                                    <a href="#" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#createCauseModal{{id}}">Edit <i data-feather="edit"
                                            class="align-self-center icon-xs ms-1"></i></a>
                                </div>
                                <div class="col-md-4">
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#deleteModel{{id}}"
                                     class="btn btn-sm btn-danger">Delete <i data-feather="database"
                                            class="align-self-center icon-xs ms-1"></i> </a>
                                </div>
                            </div>
                            
                        </div>
                        <!--end pricingTable-->
                    </div>
                    <!--end card-body-->
                </div>

            </div>

            <div class="modal fade bd-example-modal-sm" id="deleteModel{{id}}" tabindex="-1" role="dialog"
                    aria-labelledby="mySmallModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-sm " role="document">
                        <div class="modal-content">
                            <div class="modal-header  bg-danger">
                                <h6 class="modal-title m-0" id="mySmallModalLabel">Delete Cause</h6>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <!--end modal-header-->
                            <div class="modal-body text-center">
                                <h4 class="mb-1">Are you sure you want to delete this cause?</h4>
                            </div>
                            <!--end modal-body-->
                            <div class="modal-footer">
                                <a href="/delete/cause/{{id}}" class="btn btn-soft-danger btn-sm">Delete Cause</a>
                                <button type="button" class="btn btn-soft-secondary btn-sm"
                                    data-bs-dismiss="modal">Close</button>
                            </div>
                            <!--end modal-footer-->
                        </div>
                        <!--end modal-content-->
                    </div>
                    <!--end modal-dialog-->
                </div>


                	 <div class="modal fade" id="createCauseModal{{id}}" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalDefaultLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h6 class="modal-title m-0" id="myLargeModalLabel">Create a Cause</h6>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <!--end modal-header-->
                            <div class="modal-body">
                                <form class="form-parsley" id="form" action="/causes" method="post"
                                    enctype="multipart/form-data">
                                    <div class="row">

                                        <div class="col-md-8 tag-input">
                                            <div class="form-group">
                                                <label class="form-label text-dark">Title</label>
                                                <div>
                                                    <input type="hidden" name="id" value="{{id}}">
                                                    <input type="text" id="titleTxt" name="caption" class="form-control"
                                                        required placeholder="Enter Title" value="{{caption}}" />
                                                </div>
                                            </div>
                                            <!--end form-group-->
                                        </div>

                                        <div class="col-md-4 event-date-input">
                                            <div class="form-group">
                                                <label class="form-label text-dark">Amount Needed</label>
                                                <div>
                                                    <input type="text" id="titleTxt" name="amount_required"
                                                        value="{{amount_required}}" class="form-control" required
                                                        placeholder="Enter amont needed for this cause" />
                                                </div>
                                            </div>
                                            <!--end form-group-->
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label text-dark">Cause Description</label>
                                        <textarea required class="form-control" id="workTxt" name="descp"
                                            placeholder="Type content of the event or news"
                                            rows="3">{{descp}}</textarea>
                                    </div>
                                    <div class="form-group">
                                        <label class="form-label text-dark">Please upload <b> Cause Banner Image</b>
                                            for this post</label>
                                        <input type="file" id="input-file-now" name="resource" required class="dropify"
                                            data-height="100" />
                                    </div>

                            </div>
                            <!--end modal-body-->
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary btn-sm">Update Cause</button>
                                <button type="button" class="btn btn-secondary btn-sm"
                                    data-bs-dismiss="modal">Close</button>
                            </div>
                            </form>
                            <!--end modal-footer-->
                        </div>
                        <!--end modal-content-->
                    </div>
                    <!--end modal-dialog-->
                </div>

            {{/each }}


            <!--end card-body-->
        </div>
        <!--end card-->
    </div>
</div>


<div class="modal fade" id="createCauseModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalDefaultLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title m-0" id="myLargeModalLabel">Create Cause</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <!--end modal-header-->
            <div class="modal-body">
                <form class="form-parsley" id="form" action="/causes" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-8 tag-input">
                            <div class="form-group">
                                <label class="form-label text-dark">Title</label>
                                <div>
                                    <input type="text" id="titleTxt" name="caption" class="form-control" required
                                        placeholder="Enter Title" />
                                </div>
                            </div>
                            <!--end form-group-->
                        </div>

                        <div class="col-md-4 event-date-input">
                            <div class="form-group">
                                <label class="form-label text-dark">Amount Needed</label>
                                <div>
                                    <input type="number" id="titleTxt" name="amount_required" class="form-control"
                                        required placeholder="Enter amont needed for cause" />
                                </div>
                            </div>
                            <!--end form-group-->
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="form-label text-dark">Cause Description</label>
                        <textarea required class="form-control" id="workTxt" name="descp"
                            placeholder="Type description of cause" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="form-label text-dark">Please upload <b> Cause Banner Image</b> for this
                            if it has any</label>
                        <input type="file" id="input-file-now" name="resource" required class="dropify"
                            data-height="100" />
                    </div>

            </div>
            <!--end modal-body-->
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary btn-sm">Create Cause</button>
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
            </div>
            </form>
            <!--end modal-footer-->
        </div>
        <!--end modal-content-->
    </div>
    <!--end modal-dialog-->
</div>